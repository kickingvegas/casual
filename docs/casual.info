     ; bindings to make jumping consistent between Org Agenda and Casual Agenda
     (keymap-set org-agenda-mode-map "M-j" #'org-agenda-clock-goto) ; optional
     (keymap-set org-agenda-mode-map "J" #'bookmark-jump) ; optional

